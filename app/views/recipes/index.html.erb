<!-- app/views/recipes/index.html.erb -->

<h1>Recipes</h1>

<%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Instructions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.instructions %></td>
      </tr>
    <% end %>
  </tbody>
</table>
